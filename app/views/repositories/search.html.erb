<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <ul>
    <% @body['items'].each do |item| %>
      <li>
        Name: <%= link_to item['name'], item['html_url'] %>
        Description: <%= item['description'] %>
      </li>
    <% end %>
  </ul>
</div>
